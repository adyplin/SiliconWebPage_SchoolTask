@model CourseIndexViewModel
@{
    ViewData ["Title"] = "Courses";
}


<section id="our-courses">
    <div class="container">
        <div class="page-info">
            <p><i class="fa-regular fa-house"></i> Home <i class="fa-light fa-angles-right"></i><a href="#"> Courses </a></p>
        </div>
        <div class="headline">
            <h1>Courses</h1>
            <div class="forms">
                <select id="choose">
                    <option>All Categories</option>
                    <option>Fullstack</option>
                    <option>Web developer</option>
                </select>
                <form>
                    <input class="form-control" type="text" placeholder="Search courses"><i class="fa-regular fa-magnifying-glass"></i>
                </form>
            </div>
        </div>
        <div class="content">
            @if( Model.Courses != null)
            {
                @foreach(var course in Model.Courses)
                {
                    <div class="content-box" asp-action="Details" asp-controller="Courses" asp-route-id="@course.Id">
                        @if (course.IsBestseller)
                        {
                            <div class="bestseller">Best Seller</div>
                        }

                        <button class="btn btn-circle bookmark"><i class="fa-regular fa-bookmark"></i></button>

                        <img src="~/images/@course.Image" alt="@course.Title" />

                        <div class="courses">
                            <h5 class="title">@course.Title</h5>
                            <p class="author">@course.Author</p>
                            <div class="pricing">
                                <h6 class="@(string.IsNullOrEmpty(course.Price) ? "" : "sale")">@course.DiscountPrice <span>@course.Price</span></h6>
                            </div>
                            <hr />
                            <div class="ratings">
                                <p><i class="fa-regular fa-clock"></i>@course.Hours hours</p>
                                <p><i class="fa-regular fa-thumbs-up"></i>@course.LikesInProcent (@course.LikesInNumbers)</p>
                            </div>
                        </div>
                    </div>
                }
            }
        </div>
        <div class="slider">
            <img src="images/icons/slider.svg" alt="">
        </div>
    </div>
</section>
<section id="get-started">
    <div class="container">
        <div class="content">
            <p>Ready to get started?</p>
            <h1>Take Your <span>Skills</span> to the Next Level</h1>
            <a class="btn-theme" href="#">Work with us</a>
        </div>
        <div class="photo">
            <img src="images/paint.svg" alt="">
        </div>
    </div>
</section>